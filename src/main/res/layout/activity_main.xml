<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.dsuappacademy.dsualumniassociation.MainActivity"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="WE NEED YOUR SUPPORT"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="22sp" />

    <ImageView
    android:id="@+id/hornet_picture"
    android:layout_width="match_parent"
    android:layout_height="352dp"
    android:scaleType="center"
    android:src="@drawable/dsu_hornet" />

    <RelativeLayout
    android:layout_width="332dp"
    android:layout_height="128dp"
        android:paddingBottom="16dp"
    android:layout_gravity="bottom|center">

    <Button
        android:id="@+id/donate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:onClick="donateMoney"
        android:text="DONATE"
        android:textColor="#fff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/contactUs"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:onClick="contactUs"
        android:text="CONTACT US"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn2"
        android:layout_alignStart="@+id/btn2" />


        <Button
        android:id="@+id/btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:onClick="aboutActivity"
        android:text="ABOUT"
        android:textColor="#fff"
            android:layout_alignTop="@+id/btn2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:text="VERIFY DEGREE"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

</LinearLayout>